<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_pg"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="血压正常范围："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            />
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:inputType="number"
            android:id="@+id/l_xy"
            />
        <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            />
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:inputType="number"
            android:id="@+id/h_xy"
            />
        <TextView
            android:text="mmHg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="心率正常范围："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="#000000"
            />
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:inputType="number"
            android:id="@+id/l_xl"
            />
        <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            />
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:inputType="number"
            android:id="@+id/h_xl"
            />
        <TextView
            android:text="次/分钟"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="体重正常范围："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="#000000"
            />
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:inputType="number"
            android:id="@+id/l_tz"
            />
        <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            />
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:inputType="number"
            android:id="@+id/h_tz"
            />
        <TextView
            android:text="kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="血脂正常范围："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="#000000"
            />
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:inputType="number"
            android:id="@+id/l_xz"
            />
        <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            />
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:inputType="number"
            android:id="@+id/h_xz"
            />
        <TextView
            android:text="mmol/L"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="30dp"
        android:text="建议自定义设置不要与正常值偏差过大！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textColor="#CD5C5C"
        />
    <TextView
        android:text="否则不能及时进行异常分析！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textColor="#CD5C5C"
        />
    <TextView
        android:layout_marginTop="30dp"
        android:text="体温正常范围为36-37℃"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textColor="#CD5C5C"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:text="心率正常范围为60-100次/分钟"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textColor="#CD5C5C"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:text="血压的收缩压正常范围90-140mmHg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textColor="#CD5C5C"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:text="血脂的总胆固醇低于5.20mmol/L(200mg/dl)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textColor="#CD5C5C"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="#87CEEB"
        android:text="确定"
        android:textColor="#000000"
        android:id="@+id/btn_set"
        />

</LinearLayout>